{
  "name": "backend-code-test",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:clean && npm run build:tsc && npm run lint",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc",
    "dev": "cross-env NODE_ENV=dev ts-node-dev --ignore-watch node_modules --inspect=0.0.0.0:9267 ./src/api/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve-debug": "nodemon --inspect dist/api/server.js",
    "serve": "node dist/api/server.js",
    "start": "npm run serve",
    "test": "npm run test:unit && npm run test:features",
    "test:unit": "jest --forceExit --coverage=false --verbose",
    "test:features": "NODE_ENV=test cucumber-js",
    "watch-node": "nodemon dist/api/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "@types/convict": "^5.2.1",
    "@types/mongodb": "^3.6.12",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "convict": "^6.0.0",
    "express": "^4.17.1",
    "http-status": "^1.5.0",
    "lusca": "^1.6.1",
    "uuid": "^8.3.2",
    "mongodb": "^3.6.6",
    "node-dependency-injection": "^2.6.11"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cucumber": "^6.0.1",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^6.8.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/lusca": "^1.6.1",
    "@types/mockdate": "^3.0.0",
    "@types/node": "^13.13.4",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "cross-env": "^7.0.2",
    "cucumber": "^6.0.5",
    "errorhandler": "^1.5.1",
    "eslint": "^6.8.0",
    "jest": "^26.0.0",
    "mockdate": "^3.0.5",
    "nodemon": "^2.0.3",
    "supertest": "^4.0.2",
    "ts-jest": "^25.4.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
